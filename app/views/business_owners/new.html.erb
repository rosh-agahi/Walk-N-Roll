<h1>Sign Up!</h1>
<p>Business owners can sign up here.</p>

<div class="center_form">

<%= render partial: 'layouts/errors', locals: {object: @business_owner}  %>

  <%= form_for(@business_owner) do |f| %>

    <div class="form_item"><%= f.label :name %></div>
    <div class="form_item"><%= f.text_field :name, :class=>"text" %></div>

    <br>

    <div class="form_item"><%= f.label :username %></div>
    <div class="form_item"><%= f.text_field :username, :class=>"text" %></div>

    <br>

    <div class="form_item"><%= f.label :password %></div>
    <div class="form_item"><%= f.password_field :password, :class=>"text" %></div>

    <br>

    <div class="form_item"><%= f.submit "Sign Up", :class=>"submit" %></div>

  <% end %>
</div>
