<h1>Add a New Client</h1>

<%= form_for(@client) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

<!---  <%= f.label :username %> --->
<!---  <%= f.text_field :username %> --->

<!---  <%= f.label :password %> --->
